<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <configSections>
    <section name="transformalize" type="Transformalize.Configuration.TransformalizeConfiguration, Transformalize"/>
  </configSections>

  <transformalize>
    <processes>

      <add name="JunkDrawer">
        
        <connections>
          <!-- no user and password implies trusted authentication -->
          <add name="output" server="localhost" database="Junk" user="" password=""/>
          <!--<add name="mail" provider="mail" server="your.mail.server" port="25" />-->
        </connections>

        <log>
          <add name="file" provider="file" level="Informational" folder="." file="junk-drawer.log" />
          <!--<add name="mail" provider="mail" level="Error" connection="mail" from="your.from.address" to="your.to.address" />-->
        </log>

        <file-inspection sample="100" min-length="64" max-length="4000">
          <types ignore-empty="true">
            <add type="boolean"/>
            <add type="byte"/>
            <add type="int16"/>
            <add type="int32"/>
            <add type="int64"/>
            <add type="single"/>
            <add type="double"/>
            <add type="decimal"/>
            <add type="datetime"/>
          </types>
          <delimiters>
            <add name="comma" character=","/>
            <add name="pipe" character="|"/>
            <add name="tab" character="&#009;"/>
            <add name="semicolon" character=";"/>
          </delimiters>
        </file-inspection>

      </add>

    </processes>
  </transformalize>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
  </startup>

</configuration>
